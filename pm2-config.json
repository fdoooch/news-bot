{
    "apps": [
      {
        "name": "news-publisher",
        "cwd": "~/news-bot",
        "interpreter": "uv",
        "script": "run",
        "args": "python -m app.main",
        "instances": 1,
        "autorestart": true,
        "watch": false,
        "max_memory_restart": "1G",
        "error_file": "logs/err.log",
        "out_file": "logs/out.log",
        "merge_logs": true,
        "time": true,
        "log_date_format": "YYYY-MM-DD HH:mm:ss Z"
      }
    ]
  }